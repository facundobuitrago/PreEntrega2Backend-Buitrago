<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
      <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap" rel="stylesheet">
</head>
<style>
    body{ font-family: "Fjalla One", serif;}
</style>
<body>
    <h1>Productos en Tiempo Real</h1>
    <a href="/" style="background-color: teal; color: white; border: none; padding: 10px 20px; cursor: pointer;">
    Ir al Home
</a>
    <ul id="products-list" style="display: flex; align-items: baseline; flex-wrap: wrap; justify-content: space-between;">
        {{#each products}}
            <li data-product-id="{{id}}">
                <h2>{{nombre}}</h2>
                <p>{{descripcion}}</p>
                <p>Precio: ${{precio}}</p>
                <p>Stock: {{stock}}</p>
                <button class="delete-btn">Eliminar</button>
            </li>
        {{/each}}
    </ul>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        // Actualizar la lista de productos
        socket.on("productos-actuales", (products) => {
            const productsList = document.getElementById("products-list");
            productsList.innerHTML = "";
            products.forEach((product) => {
                const productHTML = `
                    <li data-product-id="${product.id}">
                        <h2>${product.nombre}</h2>
                        <p>${product.descripcion}</p>
                        <p>Precio: $${product.precio}</p>
                        <p>Cantidad: ${product.stock}</p>
                        <button class="delete-btn">Eliminar</button>
                    </li>
                `;
                productsList.innerHTML += productHTML;
            });
            attachEventListeners(); // Reasignar eventos
        });

        // Emitir eliminaciÃ³n de producto
        const attachEventListeners = () => {
            const deleteButtons = document.querySelectorAll(".delete-btn");
            deleteButtons.forEach((btn) => {
                btn.addEventListener("click", () => {
                    const productId = btn.closest("li").dataset.productId;
                    socket.emit("delete-product", productId);
                });
            });
            }
        attachEventListeners();
    </script>
    
</body>
</html>
